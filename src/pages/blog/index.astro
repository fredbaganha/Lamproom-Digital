---
import Layout from "../../components/Layout.astro";
import { glob } from "astro/loaders";

const posts = await glob("./*.md");
---
<Layout title="Blog | Digital Marketing Agency">
  <h1>Blog</h1>
  <ul>
    {posts.map(post => (
      <li><a href={post.url}>{post.frontmatter.title}</a></li>
    ))}
  </ul>
</Layout>
