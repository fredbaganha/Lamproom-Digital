---
import Layout from "../components/Layout.astro";
---

<Layout title="Contact | Lamproom Digital" description="Get in touch with Lamproom Digital for strategy, SEO, and digital growth.">
  <!-- Hero -->
  <section class="bg-brand-green text-brand-eggshell py-20 text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h1 class="text-4xl md:text-5xl font-heading mb-6">Contact Us</h1>
      <p class="text-lg md:text-xl">Weâ€™d love to hear from you.</p>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-20 bg-brand-eggshell text-brand-black">
    <div class="max-w-3xl mx-auto px-6">
      <form class="space-y-6 bg-white p-8 rounded-xl shadow">
        <div>
          <label class="block mb-2 font-semibold">Name</label>
          <input type="text" class="w-full border rounded px-4 py-2" />
        </div>
        <div>
          <label class="block mb-2 font-semibold">Email</label>
          <input type="email" class="w-full border rounded px-4 py-2" />
        </div>
        <div>
          <label class="block mb-2 font-semibold">Message</label>
          <textarea rows="5" class="w-full border rounded px-4 py-2"></textarea>
        </div>
        <button type="submit" class="btn-primary">Send Message</button>
      </form>
    </div>
  </section>
</Layout>
