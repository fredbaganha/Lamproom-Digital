---
import "../styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

const {
  title = "Lamproom Digital",
  description = "Visibility is where all meaningful work starts.",
  noIndex = false,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Fonts (fast + swap) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Montserrat:wght@600;800&display=swap"
      rel="stylesheet"
    />

    <!-- Mobile theme color -->
    <meta name="theme-color" content="#0d2b15" />
  </head>

  <body class="min-h-screen flex flex-col font-body bg-brand-eggshell text-brand-black">
    <!-- 🌐 Navbar -->
    <Navbar />

    <!-- Main Content (padding matches sticky navbar height) -->
    <main id="main" class="flex-1 pt-20 md:pt-24">
      <slot />
    </main>

    <!-- 🔻 Footer -->
    <Footer />
  </body>
</html>
